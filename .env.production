# DeSci Platform 生产环境配置
# 此文件包含生产环境的配置参数

# 环境设置
NODE_ENV=production
DEBUG=false

# 服务端口
PORT=3000
API_PORT=3000
VUE_PORT=3001

# 区块链配置
BLOCKCHAIN_ENABLED=true
RPC_URL=http://127.0.0.1:8545
CHAIN_ID=31337

# 数据库配置 (如果使用)
# DATABASE_URL=postgresql://user:password@localhost:5432/desci_prod

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# 安全配置
# JWT_SECRET=your-production-jwt-secret
# API_KEY=your-production-api-key

# 监控配置
ENABLE_METRICS=true
METRICS_INTERVAL=30000

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/desci-platform.log

# 性能配置
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000
UPLOAD_LIMIT=50mb

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600000

# 区块链网络配置
NETWORK_NAME=hardhat
BLOCK_TIME=2
GAS_LIMIT=8000000
GAS_PRICE=20000000000

# 合约地址 (部署后更新)
# USER_PROFILE_CONTRACT=0x...
# ZK_PROOF_CONTRACT=0x...
# NFT_CONTRACT=0x...
# DATASET_CONTRACT=0x...
# PLATFORM_CONTRACT=0x...

# 外部服务配置
# IPFS_GATEWAY=https://ipfs.infura.io/ipfs/
# WEB3_PROVIDER=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups

# 监控告警配置
ALERT_EMAIL=admin@example.com
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SSL配置 (HTTPS)
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# 负载均衡配置
# LOAD_BALANCER_ENABLED=false
# UPSTREAM_SERVERS=http://localhost:3001,http://localhost:3002

# 容器化配置
# DOCKER_ENABLED=false
# DOCKER_IMAGE=desci-platform:latest
# DOCKER_CONTAINER_NAME=desci-platform-prod

# 部署配置
DEPLOYMENT_ENV=production
AUTO_RESTART=true
RESTART_DELAY=5000
MAX_RESTARTS=10
